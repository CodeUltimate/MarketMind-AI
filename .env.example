# API Keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Alpaca API Keys (for stock trading)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Binance API Keys (for crypto trading)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Broker Configuration
BROKER=alpaca  # Which broker to use: alpaca (stocks), binance (crypto)

# Alpaca Configuration
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Paper trading
# ALPACA_BASE_URL=https://api.alpaca.markets  # Live trading (USE WITH CAUTION)

# Trading Configuration
INITIAL_CAPITAL=1000
TRADING_MODE=paper  # paper or live
TRADING_INTERVAL_MINUTES=60  # How often to check and potentially trade

# Risk Management
MAX_POSITION_SIZE_PCT=20  # Max % of portfolio per position
MAX_PORTFOLIO_RISK_PCT=10  # Max total portfolio at risk
PER_TRADE_RISK_PCT=2  # Risk per trade
DAILY_LOSS_LIMIT_PCT=3  # Stop trading if down this much in a day
MAX_DRAWDOWN_PCT=15  # Circuit breaker

# AI Configuration
AI_MODEL=deepseek-chat  # or gpt-4, claude-3-opus, etc.
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Data Sources
NEWS_API_KEY=your_news_api_key_here  # Optional: newsapi.org

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/trading_bot.log
